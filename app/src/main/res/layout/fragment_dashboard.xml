<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboardx.DsbrFragment">

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/maindimen"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pastel_grey"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true">

        <LinearLayout
            android:layout_margin="@dimen/maindimen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilihan Fitur"
                android:textColor="@color/black"/>

            <LinearLayout
            android:layout_marginTop="@dimen/maindimen"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:shape="ring"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            app:cardCornerRadius="75dp"
                            app:cardBackgroundColor="@color/fourth_orange"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/chat_inbox" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inbox"
                        android:textColor="@color/second_grey"
                        android:textSize="15dp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:shape="ring"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            app:cardCornerRadius="75dp"
                            app:cardBackgroundColor="@color/first_green"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/chat_bantuan" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bantuan"
                        android:textColor="@color/second_grey"
                        android:textSize="15dp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:shape="ring"
                            app:cardElevation="0dp"
                            android:elevation="0dp"
                            app:cardCornerRadius="75dp"
                            app:cardBackgroundColor="@color/fifth_blue"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/chat_pay" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bayar"
                        android:textColor="@color/second_grey"
                        android:textSize="15dp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/maindimen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat Kamu"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_marginTop="@dimen/maindimen"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:shape="ring"
                    app:cardElevation="0dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="75dp"
                    app:cardBackgroundColor="@color/fifth_blue"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/chat_pay" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout

                    android:layout_marginLeft="@dimen/maindimen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="GoPayLater"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:text="13/06/2022"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Ada beberapa hal nij yang bisa buat.."
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:textColor="@color/fourth_orange"
                                android:text="5"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:background="@color/first_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/maindimen"
        android:layout_marginBottom="16dp"
        app:tint="@android:color/white"
        android:backgroundTint="@color/first_green"
        android:src="@drawable/ic_baseline_add_24_white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>